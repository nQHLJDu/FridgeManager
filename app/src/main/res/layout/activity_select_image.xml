<!-- activity_select_image.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectImageActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食材を選択してください"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <ImageView
        android:id="@+id/itemImageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/item_image_desc"
        android:src="@drawable/bomb"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/itemImageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/item_image_desc"
        android:src="@drawable/bullet"
        android:layout_gravity="center" />

    <!-- 他の画像Viewも追加 -->

</LinearLayout>
