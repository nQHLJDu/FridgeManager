<!-- activity_select_image.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SelectImageActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食材を選択してください"
        android:textSize="28sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/itemImageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/item_image_desc"
            android:src="@drawable/kyabetsu"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/itemImageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/item_image_desc"
            android:src="@drawable/tomato"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/itemImageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/item_image_desc"
            android:src="@drawable/kyuri"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/itemImageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/item_image_desc"
            android:src="@drawable/renkon"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/itemImageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/item_image_desc"
            android:src="@drawable/sanma"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/itemImageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/item_image_desc"
            android:src="@drawable/apple"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/back"
        app:tint="@color/white"
        app:backgroundTint="@color/primary"
        android:scaleType="centerInside"
        tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>
